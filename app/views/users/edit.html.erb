<div class="container" style="margin-top:34px">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="form-group">
        <%= form_for @user do |f| %>
          <%= f.label 'Name', class:'control-label' %><br>
          <%= f.text_field :name, class:'form-control' %><br>

          <%= f.label 'Description', class:'control-label' %><br>
          <%= f.text_area :description,class:'form-control' %><br>

          <%= f.label 'Email',class:'control-labe' %><br>
          <%= f.text_field :email,class:'form-control' %><br>

          <%= f.submit "Submit changes", class:'btn btn-default' %>
          <%= link_to 'Cancel', users_path, class:'btn btn-default' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
